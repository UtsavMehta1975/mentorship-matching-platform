<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Activity Feed - Mentorship Platform</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Mentorship Platform</a>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/dashboard">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/profile">Edit Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/logout">Logout</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container mt-5">
        <button onclick="goBack()" class="btn btn-secondary mt-3">Back to Previous Page</button>
        <script>
            function goBack() {
                window.history.back();
            }
        </script>

        <h1 class="text-center">Activity Feed</h1>
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <% if (activities && activities.length > 0) { %>
                    <% activities.forEach(activity => { %>
                        <div class="card mb-4">
                            <div class="card-body">
                                <h5 class="card-title"><%= activity.username %></h5>
                                <p class="card-text"><%= activity.activity %></p>
                                <small class="text-muted"><%= new Date(activity.timestamp).toLocaleString() %></small>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="card">
                        <div class="card-body">
                            <p class="card-text">No activities found.</p>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
